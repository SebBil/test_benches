<%= error_messages_for 'benches' %>

<div class="box">
  <table summary="">
    <tr>
      <th><%= f.label :name, "Name" %></th>
      <td><%= f.text_field :name, value: @bench.name %></td>
    </tr>
    <tr>
      <th><%= f.label :vin, "VIN" %></th>
      <td><%= f.text_field :vin, value: @bench.vin %></td>
    </tr>
    <tr>
      <th><%= f.label :platform, "Platform" %></th>
      <td><%= f.select :platform, [["MEB","MEB"], ["MQB_AB", "MQB_AB"], ["MLB Gen 1", "MLB Gen 1"], ["MLB Gen 2", "MLB Gen 2"], ["PPE", "PPE"]], selected: @bench.platform %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.hidden_field :project_id, :value => params[:id]%> </td>
  </table>
</div>
